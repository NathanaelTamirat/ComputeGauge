{
  "version": 2,
  "builds": [
    {
      "src": "api/v1/handler.go",
      "use": "@vercel/go",
      "config": {
        "includeFiles": [
          "internal/**/*",
          "pkg/**/*",
          "web/templates/**/*",
          "web/static/**/*",
          "docs/**/*",
          "models/**/*.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/web/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/v1/handler.go"
    }
  ],
  "env": {
    "VERCEL_ROOT_DIR": "/var/task"
  }
}
